<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyTaiSanActivity">

    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách tài sản"/>

    <ListView
        android:id="@+id/lvTaiSan"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lvTaiSan">
        <EditText
            android:id="@+id/tvTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tài sản"/>
        <EditText
            android:id="@+id/tvLoai"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loại tài sản"/>
        <EditText
            android:id="@+id/tvViTri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vị trí tài sản"/>
        <Spinner
            android:id="@+id/spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/tvGiaTri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá trị tài sản"/>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnThem"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Thêm"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnSua"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Sửa"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnXoa"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Xóa"/>
        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>